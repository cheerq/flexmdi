<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var creditcards : DataTable = new DataTable("getCreditCards",aworks.vo.CreditCard);
			
			public function onCreationComplete():void
			{
				creditcards.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.creditcards.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="CREDITCARDID" headerText="CreditCardID" />
			<mx:DataGridColumn dataField="CARDTYPE" headerText="CardType" />
			<mx:DataGridColumn dataField="CARDNUMBER" headerText="CardNumber" />
			<mx:DataGridColumn dataField="EXPMONTH" headerText="ExpMonth" />
			<mx:DataGridColumn dataField="EXPYEAR" headerText="ExpYear" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="creditcards.invoke()" label="refresh" />
		<mx:Text text="{creditcards.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



