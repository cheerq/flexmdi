<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var employeepayhistorys : DataTable = new DataTable("getEmployeePayHistorys",aworks.vo.EmployeePayHistory);
			
			public function onCreationComplete():void
			{
				employeepayhistorys.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.employeepayhistorys.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="EMPLOYEEID" headerText="EmployeeID" />
			<mx:DataGridColumn dataField="RATECHANGEDATE" headerText="RateChangeDate" />
			<mx:DataGridColumn dataField="RATE" headerText="Rate" />
			<mx:DataGridColumn dataField="PAYFREQUENCY" headerText="PayFrequency" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="employeepayhistorys.invoke()" label="refresh" />
		<mx:Text text="{employeepayhistorys.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



