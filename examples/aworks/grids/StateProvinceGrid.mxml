<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var stateprovinces : DataTable = new DataTable("getStateProvinces",aworks.vo.StateProvince);
			
			public function onCreationComplete():void
			{
				stateprovinces.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.stateprovinces.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="STATEPROVINCEID" headerText="StateProvinceID" />
			<mx:DataGridColumn dataField="STATEPROVINCECODE" headerText="StateProvinceCode" />
			<mx:DataGridColumn dataField="COUNTRYREGIONCODE" headerText="CountryRegionCode" />
			<mx:DataGridColumn dataField="ISONLYSTATEPROVINCEFLAG" headerText="IsOnlyStateProvinceFlag" />
			<mx:DataGridColumn dataField="NAME" headerText="Name" />
			<mx:DataGridColumn dataField="TERRITORYID" headerText="TerritoryID" />
			<mx:DataGridColumn dataField="ROWGUID" headerText="rowguid" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="stateprovinces.invoke()" label="refresh" />
		<mx:Text text="{stateprovinces.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



