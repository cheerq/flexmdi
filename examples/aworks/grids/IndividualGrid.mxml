<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var individuals : DataTable = new DataTable("getIndividuals",aworks.vo.Individual);
			
			public function onCreationComplete():void
			{
				individuals.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.individuals.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="CUSTOMERID" headerText="CustomerID" />
			<mx:DataGridColumn dataField="CONTACTID" headerText="ContactID" />
			<mx:DataGridColumn dataField="DEMOGRAPHICS" headerText="Demographics" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="individuals.invoke()" label="refresh" />
		<mx:Text text="{individuals.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



