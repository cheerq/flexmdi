<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var illustrations : DataTable = new DataTable("getIllustrations",aworks.vo.Illustration);
			
			public function onCreationComplete():void
			{
				illustrations.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.illustrations.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="ILLUSTRATIONID" headerText="IllustrationID" />
			<mx:DataGridColumn dataField="DIAGRAM" headerText="Diagram" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="illustrations.invoke()" label="refresh" />
		<mx:Text text="{illustrations.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



