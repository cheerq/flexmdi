<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var salesorderheaders : DataTable = new DataTable("getSalesOrderHeaders",aworks.vo.SalesOrderHeader);
			
			public function onCreationComplete():void
			{
				salesorderheaders.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.salesorderheaders.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SALESORDERID" headerText="SalesOrderID" />
			<mx:DataGridColumn dataField="REVISIONNUMBER" headerText="RevisionNumber" />
			<mx:DataGridColumn dataField="ORDERDATE" headerText="OrderDate" />
			<mx:DataGridColumn dataField="DUEDATE" headerText="DueDate" />
			<mx:DataGridColumn dataField="SHIPDATE" headerText="ShipDate" />
			<mx:DataGridColumn dataField="STATUS" headerText="Status" />
			<mx:DataGridColumn dataField="ONLINEORDERFLAG" headerText="OnlineOrderFlag" />
			<mx:DataGridColumn dataField="SALESORDERNUMBER" headerText="SalesOrderNumber" />
			<mx:DataGridColumn dataField="PURCHASEORDERNUMBER" headerText="PurchaseOrderNumber" />
			<mx:DataGridColumn dataField="ACCOUNTNUMBER" headerText="AccountNumber" />
			<mx:DataGridColumn dataField="CUSTOMERID" headerText="CustomerID" />
			<mx:DataGridColumn dataField="CONTACTID" headerText="ContactID" />
			<mx:DataGridColumn dataField="SALESPERSONID" headerText="SalesPersonID" />
			<mx:DataGridColumn dataField="TERRITORYID" headerText="TerritoryID" />
			<mx:DataGridColumn dataField="BILLTOADDRESSID" headerText="BillToAddressID" />
			<mx:DataGridColumn dataField="SHIPTOADDRESSID" headerText="ShipToAddressID" />
			<mx:DataGridColumn dataField="SHIPMETHODID" headerText="ShipMethodID" />
			<mx:DataGridColumn dataField="CREDITCARDID" headerText="CreditCardID" />
			<mx:DataGridColumn dataField="CREDITCARDAPPROVALCODE" headerText="CreditCardApprovalCode" />
			<mx:DataGridColumn dataField="CURRENCYRATEID" headerText="CurrencyRateID" />
			<mx:DataGridColumn dataField="SUBTOTAL" headerText="SubTotal" />
			<mx:DataGridColumn dataField="TAXAMT" headerText="TaxAmt" />
			<mx:DataGridColumn dataField="FREIGHT" headerText="Freight" />
			<mx:DataGridColumn dataField="TOTALDUE" headerText="TotalDue" />
			<mx:DataGridColumn dataField="COMMENT" headerText="Comment" />
			<mx:DataGridColumn dataField="ROWGUID" headerText="rowguid" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="salesorderheaders.invoke()" label="refresh" />
		<mx:Text text="{salesorderheaders.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



