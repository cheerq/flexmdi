<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var vendoraddresses : DataTable = new DataTable("getVendorAddresses",aworks.vo.VendorAddress);
			
			public function onCreationComplete():void
			{
				vendoraddresses.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.vendoraddresses.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="VENDORID" headerText="VendorID" />
			<mx:DataGridColumn dataField="ADDRESSID" headerText="AddressID" />
			<mx:DataGridColumn dataField="ADDRESSTYPEID" headerText="AddressTypeID" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="vendoraddresses.invoke()" label="refresh" />
		<mx:Text text="{vendoraddresses.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



