<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var workorders : DataTable = new DataTable("getWorkOrders",aworks.vo.WorkOrder);
			
			public function onCreationComplete():void
			{
				workorders.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.workorders.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="WORKORDERID" headerText="WorkOrderID" />
			<mx:DataGridColumn dataField="PRODUCTID" headerText="ProductID" />
			<mx:DataGridColumn dataField="ORDERQTY" headerText="OrderQty" />
			<mx:DataGridColumn dataField="STOCKEDQTY" headerText="StockedQty" />
			<mx:DataGridColumn dataField="SCRAPPEDQTY" headerText="ScrappedQty" />
			<mx:DataGridColumn dataField="STARTDATE" headerText="StartDate" />
			<mx:DataGridColumn dataField="ENDDATE" headerText="EndDate" />
			<mx:DataGridColumn dataField="DUEDATE" headerText="DueDate" />
			<mx:DataGridColumn dataField="SCRAPREASONID" headerText="ScrapReasonID" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="workorders.invoke()" label="refresh" />
		<mx:Text text="{workorders.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



