<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var purchaseorderheaders : DataTable = new DataTable("getPurchaseOrderHeaders",aworks.vo.PurchaseOrderHeader);
			
			public function onCreationComplete():void
			{
				purchaseorderheaders.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.purchaseorderheaders.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="PURCHASEORDERID" headerText="PurchaseOrderID" />
			<mx:DataGridColumn dataField="REVISIONNUMBER" headerText="RevisionNumber" />
			<mx:DataGridColumn dataField="STATUS" headerText="Status" />
			<mx:DataGridColumn dataField="EMPLOYEEID" headerText="EmployeeID" />
			<mx:DataGridColumn dataField="VENDORID" headerText="VendorID" />
			<mx:DataGridColumn dataField="SHIPMETHODID" headerText="ShipMethodID" />
			<mx:DataGridColumn dataField="ORDERDATE" headerText="OrderDate" />
			<mx:DataGridColumn dataField="SHIPDATE" headerText="ShipDate" />
			<mx:DataGridColumn dataField="SUBTOTAL" headerText="SubTotal" />
			<mx:DataGridColumn dataField="TAXAMT" headerText="TaxAmt" />
			<mx:DataGridColumn dataField="FREIGHT" headerText="Freight" />
			<mx:DataGridColumn dataField="TOTALDUE" headerText="TotalDue" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="purchaseorderheaders.invoke()" label="refresh" />
		<mx:Text text="{purchaseorderheaders.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



