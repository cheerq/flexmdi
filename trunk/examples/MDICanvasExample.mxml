<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	xmlns:containers="mdi.containers.*"
	xmlns:managers="mdi.managers.*"
	creationComplete="init()" viewSourceURL="srcview/index.html">
	<mx:Style source="/assets/css/style.css" />
	<mx:VBox>
		<mx:Button label="Cascade" click="mdic.mdiManager.cascade()" />
		<mx:Button label="Tile" click="mdic.mdiManager.tile()" />
		<mx:Button label="Tile + Fill" click="mdic.mdiManager.tile(true)" />
	</mx:VBox>
	
	<containers:MDICanvas id="mdic" x="100" width="500" height="500" backgroundColor="#CCCCCC">
		<containers:MDIWindow id="win1" title="Window One" x="10" y="10" />
		<containers:MDIWindow id="win2" title="Window Two" x="250" y="250" />
		<containers:MDIWindow id="win3" title="Window Three" x="100" y="100" />
	</containers:MDICanvas>
</mx:Application>
