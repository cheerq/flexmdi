<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var workorderroutings : DataTable = new DataTable("getWorkOrderRoutings",aworks.vo.WorkOrderRouting);
			
			public function onCreationComplete():void
			{
				workorderroutings.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.workorderroutings.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="WORKORDERID" headerText="WorkOrderID" />
			<mx:DataGridColumn dataField="PRODUCTID" headerText="ProductID" />
			<mx:DataGridColumn dataField="OPERATIONSEQUENCE" headerText="OperationSequence" />
			<mx:DataGridColumn dataField="LOCATIONID" headerText="LocationID" />
			<mx:DataGridColumn dataField="SCHEDULEDSTARTDATE" headerText="ScheduledStartDate" />
			<mx:DataGridColumn dataField="SCHEDULEDENDDATE" headerText="ScheduledEndDate" />
			<mx:DataGridColumn dataField="ACTUALSTARTDATE" headerText="ActualStartDate" />
			<mx:DataGridColumn dataField="ACTUALENDDATE" headerText="ActualEndDate" />
			<mx:DataGridColumn dataField="ACTUALRESOURCEHRS" headerText="ActualResourceHrs" />
			<mx:DataGridColumn dataField="PLANNEDCOST" headerText="PlannedCost" />
			<mx:DataGridColumn dataField="ACTUALCOST" headerText="ActualCost" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="workorderroutings.invoke()" label="refresh" />
		<mx:Text text="{workorderroutings.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



