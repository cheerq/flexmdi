<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var salestaxrates : DataTable = new DataTable("getSalesTaxRates",aworks.vo.SalesTaxRate);
			
			public function onCreationComplete():void
			{
				salestaxrates.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.salestaxrates.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SALESTAXRATEID" headerText="SalesTaxRateID" />
			<mx:DataGridColumn dataField="STATEPROVINCEID" headerText="StateProvinceID" />
			<mx:DataGridColumn dataField="TAXTYPE" headerText="TaxType" />
			<mx:DataGridColumn dataField="TAXRATE" headerText="TaxRate" />
			<mx:DataGridColumn dataField="NAME" headerText="Name" />
			<mx:DataGridColumn dataField="ROWGUID" headerText="rowguid" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="salestaxrates.invoke()" label="refresh" />
		<mx:Text text="{salestaxrates.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



