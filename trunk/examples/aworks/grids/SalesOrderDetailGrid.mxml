<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var salesorderdetails : DataTable = new DataTable("getSalesOrderDetails",aworks.vo.SalesOrderDetail);
			
			public function onCreationComplete():void
			{
				salesorderdetails.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.salesorderdetails.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SALESORDERID" headerText="SalesOrderID" />
			<mx:DataGridColumn dataField="SALESORDERDETAILID" headerText="SalesOrderDetailID" />
			<mx:DataGridColumn dataField="CARRIERTRACKINGNUMBER" headerText="CarrierTrackingNumber" />
			<mx:DataGridColumn dataField="ORDERQTY" headerText="OrderQty" />
			<mx:DataGridColumn dataField="PRODUCTID" headerText="ProductID" />
			<mx:DataGridColumn dataField="SPECIALOFFERID" headerText="SpecialOfferID" />
			<mx:DataGridColumn dataField="UNITPRICE" headerText="UnitPrice" />
			<mx:DataGridColumn dataField="UNITPRICEDISCOUNT" headerText="UnitPriceDiscount" />
			<mx:DataGridColumn dataField="LINETOTAL" headerText="LineTotal" />
			<mx:DataGridColumn dataField="ROWGUID" headerText="rowguid" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="salesorderdetails.invoke()" label="refresh" />
		<mx:Text text="{salesorderdetails.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



