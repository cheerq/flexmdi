<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var documents : DataTable = new DataTable("getDocuments",aworks.vo.Document);
			
			public function onCreationComplete():void
			{
				documents.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.documents.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="DOCUMENTID" headerText="DocumentID" />
			<mx:DataGridColumn dataField="TITLE" headerText="Title" />
			<mx:DataGridColumn dataField="FILENAME" headerText="FileName" />
			<mx:DataGridColumn dataField="FILEEXTENSION" headerText="FileExtension" />
			<mx:DataGridColumn dataField="REVISION" headerText="Revision" />
			<mx:DataGridColumn dataField="CHANGENUMBER" headerText="ChangeNumber" />
			<mx:DataGridColumn dataField="STATUS" headerText="Status" />
			<mx:DataGridColumn dataField="DOCUMENTSUMMARY" headerText="DocumentSummary" />
			<mx:DataGridColumn dataField="DOCUMENT" headerText="Document" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="documents.invoke()" label="refresh" />
		<mx:Text text="{documents.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



