<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var shoppingcartitems : DataTable = new DataTable("getShoppingCartItems",aworks.vo.ShoppingCartItem);
			
			public function onCreationComplete():void
			{
				shoppingcartitems.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.shoppingcartitems.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SHOPPINGCARTITEMID" headerText="ShoppingCartItemID" />
			<mx:DataGridColumn dataField="SHOPPINGCARTID" headerText="ShoppingCartID" />
			<mx:DataGridColumn dataField="QUANTITY" headerText="Quantity" />
			<mx:DataGridColumn dataField="PRODUCTID" headerText="ProductID" />
			<mx:DataGridColumn dataField="DATECREATED" headerText="DateCreated" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="shoppingcartitems.invoke()" label="refresh" />
		<mx:Text text="{shoppingcartitems.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



