<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var vstateprovincecountryregions : DataTable = new DataTable("getvStateProvinceCountryRegions",aworks.vo.vStateProvinceCountryRegion);
			
			public function onCreationComplete():void
			{
				vstateprovincecountryregions.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.vstateprovincecountryregions.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="STATEPROVINCEID" headerText="StateProvinceID" />
			<mx:DataGridColumn dataField="STATEPROVINCECODE" headerText="StateProvinceCode" />
			<mx:DataGridColumn dataField="ISONLYSTATEPROVINCEFLAG" headerText="IsOnlyStateProvinceFlag" />
			<mx:DataGridColumn dataField="STATEPROVINCENAME" headerText="StateProvinceName" />
			<mx:DataGridColumn dataField="TERRITORYID" headerText="TerritoryID" />
			<mx:DataGridColumn dataField="COUNTRYREGIONCODE" headerText="CountryRegionCode" />
			<mx:DataGridColumn dataField="COUNTRYREGIONNAME" headerText="CountryRegionName" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="vstateprovincecountryregions.invoke()" label="refresh" />
		<mx:Text text="{vstateprovincecountryregions.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



