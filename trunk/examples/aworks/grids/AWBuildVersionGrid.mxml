<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var awbuildversions : DataTable = new DataTable("getAWBuildVersions",aworks.vo.AWBuildVersion);
			
			public function onCreationComplete():void
			{
				awbuildversions.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.awbuildversions.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SYSTEMINFORMATIONID" headerText="SystemInformationID" />
			<mx:DataGridColumn dataField="DATABASE VERSION" headerText="Database Version" />
			<mx:DataGridColumn dataField="VERSIONDATE" headerText="VersionDate" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="awbuildversions.invoke()" label="refresh" />
		<mx:Text text="{awbuildversions.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



