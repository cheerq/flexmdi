<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var productphotos : DataTable = new DataTable("getProductPhotos",aworks.vo.ProductPhoto);
			
			public function onCreationComplete():void
			{
				productphotos.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.productphotos.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="PRODUCTPHOTOID" headerText="ProductPhotoID" />
			<mx:DataGridColumn dataField="THUMBNAILPHOTO" headerText="ThumbNailPhoto" />
			<mx:DataGridColumn dataField="THUMBNAILPHOTOFILENAME" headerText="ThumbnailPhotoFileName" />
			<mx:DataGridColumn dataField="LARGEPHOTO" headerText="LargePhoto" />
			<mx:DataGridColumn dataField="LARGEPHOTOFILENAME" headerText="LargePhotoFileName" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="productphotos.invoke()" label="refresh" />
		<mx:Text text="{productphotos.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



