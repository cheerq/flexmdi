<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var productvendors : DataTable = new DataTable("getProductVendors",aworks.vo.ProductVendor);
			
			public function onCreationComplete():void
			{
				productvendors.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.productvendors.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="PRODUCTID" headerText="ProductID" />
			<mx:DataGridColumn dataField="VENDORID" headerText="VendorID" />
			<mx:DataGridColumn dataField="AVERAGELEADTIME" headerText="AverageLeadTime" />
			<mx:DataGridColumn dataField="STANDARDPRICE" headerText="StandardPrice" />
			<mx:DataGridColumn dataField="LASTRECEIPTCOST" headerText="LastReceiptCost" />
			<mx:DataGridColumn dataField="LASTRECEIPTDATE" headerText="LastReceiptDate" />
			<mx:DataGridColumn dataField="MINORDERQTY" headerText="MinOrderQty" />
			<mx:DataGridColumn dataField="MAXORDERQTY" headerText="MaxOrderQty" />
			<mx:DataGridColumn dataField="ONORDERQTY" headerText="OnOrderQty" />
			<mx:DataGridColumn dataField="UNITMEASURECODE" headerText="UnitMeasureCode" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="productvendors.invoke()" label="refresh" />
		<mx:Text text="{productvendors.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



