<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import mdi.containers.MDIWindow;
			
			[Bindable]
			public var salespersonquotahistorys : DataTable = new DataTable("getSalesPersonQuotaHistorys",aworks.vo.SalesPersonQuotaHistory);
			
			public function onCreationComplete():void
			{
				salespersonquotahistorys.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.salespersonquotahistorys.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="SALESPERSONID" headerText="SalesPersonID" />
			<mx:DataGridColumn dataField="QUOTADATE" headerText="QuotaDate" />
			<mx:DataGridColumn dataField="SALESQUOTA" headerText="SalesQuota" />
			<mx:DataGridColumn dataField="ROWGUID" headerText="rowguid" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="salespersonquotahistorys.invoke()" label="refresh" />
		<mx:Text text="{salespersonquotahistorys.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



