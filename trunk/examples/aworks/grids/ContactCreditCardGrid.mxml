<?xml version="1.0" encoding="utf-8"?>
<flexmdi:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="onCreationComplete()"
	xmlns:flexmdi="http://flexmdi.googlecode.com/">
	
	<mx:Script>
		<![CDATA[
			import aworks.vo.Contact;
			import aworks.core.DataTable;
			import flexmdi.containers.MDIWindow;
			
			[Bindable]
			public var contactcreditcards : DataTable = new DataTable("getContactCreditCards",aworks.vo.ContactCreditCard);
			
			public function onCreationComplete():void
			{
				contactcreditcards.invoke();
			}
			
		]]>
	</mx:Script>
	
	<mx:DataGrid dataProvider="{this.contactcreditcards.rows}" width="100%" height="100%">
		<mx:columns>
		
			<mx:DataGridColumn dataField="CONTACTID" headerText="ContactID" />
			<mx:DataGridColumn dataField="CREDITCARDID" headerText="CreditCardID" />
			<mx:DataGridColumn dataField="MODIFIEDDATE" headerText="ModifiedDate" />
			
		</mx:columns>
	</mx:DataGrid>
	
	<mx:ControlBar width="100%">
		
		<mx:Button click="contactcreditcards.invoke()" label="refresh" />
		<mx:Text text="{contactcreditcards.rows.length} Record(s)" />
		<mx:Spacer width="100%" />
		
		
	</mx:ControlBar>
	
</flexmdi:MDIWindow>



