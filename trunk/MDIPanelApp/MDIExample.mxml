<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" creationComplete="OnCreationComplete()">
	
	
	
	
	
	<mx:Script>
		<![CDATA[
			import mdi.containers.Window;
			import mdi.managers.WindowManager;

			
			public function OnCreationComplete():void
			{
				
			}
			
			public function AddWindow():void
			{
				var win : Window = new Window();
				win.height = 400;
				win.width = 300;
				win.title = "title";
				
				WindowManager.add(win); 
			}
			
		]]>
	</mx:Script>
	
	

	
	<mx:Button click="AddWindow()" label="Add Window" />
	<mx:Button click="WindowManager.cascade()" label="Cascade" />
	<mx:Button click="WindowManager.tile()" label="Tile" />
	<mx:Button click="WindowManager.tile(true)" label="Tile + Fill Space" />
		
</mx:Application>
